	  web_tt2/change_email.tt2, web_tt2/choosepasswd.tt2,
	  web_tt2/compose_mail.tt2, web_tt2/copy_template.tt2,
	  web_tt2/create_list.tt2, web_tt2/create_list_request.tt2,
	  web_tt2/css.tt2, web_tt2/d_control.tt2, web_tt2/d_editfile.tt2,
