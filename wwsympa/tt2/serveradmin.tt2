    </TR>
      <TR><TD NOWRAP>
        <FORM ACTION="[% path_cgi %]" METHOD="POST">
	  <INPUT NAME="email" SIZE="30" VALUE="[% email %]">
	  <INPUT TYPE="hidden" NAME="action" VALUE="search_user">
	  <INPUT TYPE="submit" NAME="action_search_user" VALUE="[%|loc%]Search User[%END%]">
	</FORM>     
      <BR></TD></TR>

      <TR VALIGN="top">

        <TH BGCOLOR="[% dark_color %]" COLSPAN="2">
          <TABLE WIDTH="100%" CELLPADDING="0" CELLSPACING="0">
            <TR>
             <TH BGCOLOR="[% selected_color %]" WIDTH="50%">
              <FONT COLOR="[% bg_color %]">
	        [%|loc%]Templates[%END%] 
              </FONT>
             </TH>
            </TR>
           </TABLE>
         </TH>
      </TR>
      <TR>
        <TD NOWRAP>
	  <FORM ACTION="[% path_cgi %]" METHOD=POST>
	    <FONT COLOR="[% dark_color %]"><B>[%|loc%]Setting defaults list templates[%END%]</B></FONT><BR>
	     <SELECT NAME="file">
	      [% FOREACH f = lists_default_files %]
	        <OPTION VALUE='[% f.key %]' [% f.value.selected %]>[% f.value.complete %]
	      [% END %]
	    </SELECT>
	    <INPUT TYPE="submit" NAME="action_editfile" VALUE="[%|loc%]Edit[%END%]">
	  </FORM>

	  <FORM ACTION="[% path_cgi %]" METHOD=POST>
	    <FONT COLOR="[% dark_color %]"><B>[%|loc%]Setting site templates[%END%]</B></FONT><BR>
	     <SELECT NAME="file">
	      [% FOREACH f = server_files %]
	        <OPTION VALUE='[% f.key %]' [% f.value.selected %]>[% f.value.complete %]
	      [% END %]
	    </SELECT>
	    <INPUT TYPE="submit" NAME="action_editfile" VALUE="[%|loc%]Edit[%END%]">
	  </FORM>
	</TD>
      </TR>
      <TR><TD>
     [% PROCESS 'button_header.tt2' %]
