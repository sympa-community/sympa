<!-- $Id$ -->

<table width="100%"><tr>
 <td>
  [% IF url %]
  <h1>[%|loc(visible_path)%]Properties of the bookmark %1[%END%]</h1>
  [% ELSIF directory %]
  <h1>[%|loc(visible_path)%]Properties of the directory %1[%END%]</h1>
  [% ELSE %]
  <h1>[%|loc(visible_path)%]Properties of the file %1[%END%]</h1>
  [% END %]
 <td align="right">
  <h3><a href="[% path_cgi %]/d_read/[% list %]/[% escaped_father %]"> <img style="border: 0px; vertical-align: bottom;" src="[% father_icon %]" /> [%|loc%]Up to higher level directory[%END%] </a></h3>
 </td>      
</tr></table>
<br/>
    [%|loc(doc_owner)%]Owner : %1[%END%] <br />
    [%|loc(doc_date)%]Last update : %1[%END%] <br />
    [%|loc(desc)%]Description : %1[%END%] <br /><br />

<table cellpadding="0" cellspacing="0" border="0" style="width: 100%; border-spacing: 0em 2em;">
  <tr>
  <td valign="bottom">
  <form action="[% path_cgi %]" method="post">
  <div style="float: left; width: 60%; text-align: right;">
  <label>
  [% IF directory %]
  <strong> [%|loc(fname)%]Describe the directory %1[%END%]</strong><br />
  [% ELSE %]
  <strong> [%|loc(fname)%]Describe the file %1[%END%]</strong><br />
  [% END %]
  <textarea name="content" cols="50" rows="5">
  </textarea>

  </label>
  <input type="hidden" name="list" value="[% list %]" />
  <input type="hidden" name="path" value="[% path %]" />
  <input type="hidden" name="serial" value="[% serial_desc %]" />
  <input type="hidden" name="action" value="d_describe" />
  </div>
  <div style="float: right; width: 35%; text-align: left;">
<input size="50" maxlength="100" type="submit" name="action_d_describe" value="[%|loc%]Apply[%END%]" />
  </div>
  </form>
  </td>
  </tr>

  <tr>
  <td valign="bottom">
  <form action="[% path_cgi %]" method="post">
  <div style="float: left; width: 60%; text-align: right;">
  <label>
  [% IF directory %]
  <strong> [%|loc(fname)%]Rename directory %1[%END%]</strong><br />
  [% ELSE %]
  <strong> [%|loc(fname)%]Rename file %1[%END%]</strong><br />
  [% END %]
  <input size="50" maxlength="100" name="new_name" />
  </label>
  <input type="hidden" name="list" value="[% list %]" />
  <input type="hidden" name="path" value="[% path %]" />
  <input type="hidden" name="serial" value="[% serial_desc %]" />
  <input type="hidden" name="action" value="d_rename" />
  </div>
  <div style="float: right; width: 35%; text-align: left;">
  <input size="20" maxlength="50" type="submit" name="action_d_rename" value="[%|loc%]Rename[%END%]" />
  </div>
  </form>
  </td>
  </tr>

</table>
<br />
<br />





