      ([% list_info %])
   [% END %]
 </td>
</tr>
<tr>
 <td>
     <table style="width: auto;" border="1">
      <tr><td><pre style="font-family: monospace;">
       [% INSERT 'info' %]
      </pre></td></tr>
     </table>
 </td>
</tr>
<tr>
