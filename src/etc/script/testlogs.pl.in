#!--PERL--

use strict;
use lib '--modulesdir--';
use Getopt::Long;

#use Conf; # used by Site
#use Log; # used by Conf
use Site;

my %options;
&GetOptions(\%main::options, 'debug|d', 'log_level=s', 'config|f=s');

my $config_file = $main::options{'config'} || Sympa::Constants::CONFIG;
## Load configuration file
unless (Site->load('config_file' => $config_file)) {
   Sympa::Log::Syslog::fatal_err('Configuration file %s has errors.', $config_file);
}


## Open the syslog and say we're read out stuff.
Sympa::Log::Syslog::do_openlog(Site->syslog, Site->log_socket_type, 'sympa');

# setting log_level using conf unless it is set by calling option
if ($main::options{'log_level'}) {
    Sympa::Log::Syslog::do_log('info', 'Logs seems OK, log level set using options : %s',
	$main::options{'log_level'});
}else{
    Sympa::Log::Syslog::set_log_level(Site->log_level);
    Sympa::Log::Syslog::do_log('info', 'Logs seems OK, default log level %s',
	Site->log_level);
}
print "Ok, now check logs \n";

1;
